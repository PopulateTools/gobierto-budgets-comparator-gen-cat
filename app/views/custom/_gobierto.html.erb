/* Resets */
header a.titol span {
  top: auto;
}
footer {
  border-top: none;
}
header.sticky_top {
  width: 100%;
  height: 60px;
}
#sticky-wrapper .tools {
  top: 15px !important;
}
.place .breadcrumb {
  padding: 0;
  margin-bottom: 0;
  list-style: none;
  background-color: transparent;
  border-radius: 0;
}
.small_button:hover {
  background: #689dcb;
  color: #fff;
  text-decoration: none !important;
}
.label {
  display: inherit;
  padding: 0;
  font-size: inherit;
  font-weight: 400;
  line-height: inherit;
  color: inherit;
  text-align: left;
  white-space: inherit;
  vertical-align: inherit;
  border-radius: 0
}
.main_metrics .metric[data-page-href]:hover {
  background: #C9DCEC;
  cursor: pointer;
}
.tools .modal_widget .widget_compare {
  right: -10%;
}
input[type="submit"]:hover,
.button:hover {
  background: #689dcb;
  color: #fff;
  text-decoration: none !important;
}
.cercador_vermell .btn,
header .container .in form .form-group .buttonG.btn {
  background: url(/img/NG_ico_lupa.png) no-repeat center center #0b66ac;
}
.cercador_vermell .btn:active, 
.cercador_vermell .btn:hover {
  background: url(/img/NG_ico_lupa.png) no-repeat center center #0b66ac;
}
.cercador_vermell .form-group .form-control {
  background: url(/img/NG_ico_cercador_mbl.png) no-repeat 0.467em center #FFFFFF;
}
.widget_graph {
  padding: 1.5em 2em !important;
}
.featured_budget_line .cont {
  padding: 2.5em 3em 1.75em !important;
}
.ie_intro header.cat .form_filters {
  margin: 1em 0 0 1.5em;
}
.form_filters li a:hover, .form_filters li a.buttonSelected, .form_filters a.active {
  background: #C9DCEC;
}
.xarxes_socials {
  margin-bottom: 20px;
}
.llistat_xarxes_socials .list-group-item {
  margin: 0;
}
.llistat_xarxes_socials .list-group-item a {
  margin: 0;
  padding: 0;
}
header .column ul.menu-superior li {
  padding: 0 10px;
  margin: 0;
}

/* Main body */
body,
h1,
h2,
h3,
h4,
h5,
h6 {
  color: #333;
  font-family: "Open Sans", sans-serif;
}
.tools {
  width: 450px !important;
}
.global {
  display: none;
}
.main_content {
  width: 1140px;
  float: none;
  margin: 0 auto;
}
.top-claim {
  display: none;
}
a {
  color: #2A6EBB;
}
#follow {
  display: none;
}
h2 {
  line-height: 1.4em;
}
#doorbell-button {
  display: none;
}

/* Home */
.pre_home {
  padding: 4em 0;
}
.pre_home .places_search {
  margin: 1em 0 0 0;
}
.places_search {
  line-height: 1.6em;
  width: 24em;
  padding: 1.5%;
  border: 1px solid #ddd;
}
.search_compare {
  border-radius: 0;
  border: 1px solid #ddd;
}
.pre_home h1 img {
  visibility: hidden;
}
.button {
  background: #2A6EBB;
}
input[type="submit"] {
  background: #2A6EBB;
}
.ranking_card {
  background: #EFF5FA;
}
.ranking_card h2 {
  max-height: 4.6em;
}
.ranking_cards_carousel .the_content {
  height: 500px;
}
.about_municipalities h3 {
  color: #2A6EBB;
}
.pre_home h1,
.pre_home h2,
.pre_home h1 span::before {
  color: #333;
}
.home_section #explore_prompt {
  color: #333;
}
.home_section h2.section_heading {
     color: #333; 
}
.about_block li {
  color: #333;
}
.home_section .examples p a[data-target="how_it_works"] {
  display: none;
}

/* App */
.year_switcher {
  width: 106px;
}
.year_switcher a {
  padding-left: 0;
}
.year_switcher ul {
  width: 95px;
}
.year_switcher ul a:hover,
.year_switcher ul a:active,
.year_switcher ul a:focus {
  text-decoration: none !important;
}
.kind_switcher ul li a:hover,
.kind_switcher ul li a:active,
.kind_switcher ul li a:focus {
  text-decoration: none !important;
}
.small_button {
  background: #2A6EBB;
}
.main_metrics .metric.selected {
  background: #C9DCEC;
}
.main_metrics .metric {
  background: #EFF5FA;
}
.main_metrics .metric.selected::after {
  border-top-color: #C9DCEC;
}
.tools a.tool_button {
  background: #F5F5F5;
}
.tools a.tool_button:hover .fa {
    color: #0B66AC;
}
.widget_graph {
  background: #F5F5F5;
}
.featured_budget_line .cont {
  background: #F5F5F5;
}
.featured_budget_line .show_me_another {
  background: #F5F5F5;
}
.cta_majors {
  background: #EFF5FA;
}
.cta_majors .pro_user h3 {
  color: #2A6EBB
}
.cta_majors .pro_user .small_button {
  background: #2A6EBB;
}
.cta_majors .end_user {
  background: #2A6EBB;
}
.cta_majors .end_user .small_button {
  color: #2A6EBB;
}
.button.user {
  background: #2A6EBB;
}
.form_filters ul {
  background: #EFF5FA;
}
header.place .share_links a {
  width: 35px;
  color: #fff;
}
.execution .box h1 {
  color: #2A6EBB;
}
.button_light {
  background: #EFF5FA;
}
.button_light:hover,
.button_light:active {
  background: #C9DCEC;
}
input[type=submit]:disabled:hover,
input[type=submit]:hover,
input[type=submit]:disabled:active,
input[type=submit]:active {
  background: #689dcb;
}
.autocomplete-selected {
  background: #2A6EBB;
}
.ranking_cards_carousel .nav a:hover {
  text-decoration: none !important;
}
.ranking_card {
  padding-left: 1.5em !important;
  padding-right: 1.5em !important;
}
.ranking_card:hover,
.ranking_card:active {
  background: #C9DCEC;
}

.rankings .filters li {
  width: 27%;
}
.rankings .noUi-connect {
  background: #2A6EBB;
}
nav.pagination .current,
nav.pagination span a,
nav.pagination .gap {
  color: #fff;
  background: #2A6EBB;
  border-top: none;
}
nav.pagination .current:hover,
nav.pagination span a:hover,
nav.pagination .gap:hover,
nav.pagination .current:active,
nav.pagination span a:active,
nav.pagination .gap:active {
  background: #689dcb;
  text-decoration: none !important;
}
.comparison_table th.location .add {
  background: #2A6EBB;
}
.comparison_table th.location .add_location {
  z-index: 1;
}
.comparison_table th.location .remove {
  top: 4px;
}
.tabs > ul > li:nth-child(2),
.tabs > ul > li:nth-child(3),
.tabs > ul > li:nth-child(4) {
  display: none;
}
.place header.sub a,
.place header.sub .sep {
  font-weight: 400;
}

/* Navigation */
.navigation {
  margin-bottom: 1rem;
}
.navigation-headline {
  display: inline-block;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 1.1rem;
}
.navigation-headline a {
  color: #333;
}
.navigation-headline a:hover,
.navigation-headline a:active {
  text-decoration: none !important;
}
.navigation-list li {
  font-weight: 600;
  display: inline-block;
  margin-left: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 0.875rem;
}
.navigation-list li a {
  transition: none;
}
.navigation-list li a:hover,
.navigation-list li a:active,
.navigation-list li a:focus {
  text-decoration: none !important;
  border-bottom: 3px solid #C9DCEC;
}
.navigation-list li a.selected {
    border-bottom: 3px solid #C9DCEC;
}
header.sticky_top img {
  display: none;
}
header.sticky_top .places_search {
  background: url(/img/NG_ico_cercador_mbl.png) no-repeat 0.467em center #FFFFFF;
  padding: .5em 2em;
  width: 195px;
}


/* Charts */
table {
  font-family: "Open Sans", sans-serif;
}
.comparison_table td.budget_line {
  min-width: 60%;
}
.totals tr td {
  background: #F5F5F5;
}
.form_filters li a.buttonSelected {
  background: none;
  text-decoration: underline;
}
.execution .box .vizz line.year_marker {
  stroke: #2A6EBB;
}

/* Map page */
.sidebar_wrapper .year_switcher ul {
  left: 7px;
}
.sidebar_wrapper .year_switcher ul a {
  padding-left: 12px;
}
