<div class="main_metrics clearfix">

  <div class="metric selected"
    data-indicator="gasto_por_habitante"
    data-widget-template="#widget-template"
    data-widget-type="per_person"
    data-line-widget-series="means"
    data-line-widget-type="per_person"
    data-widget-data-url="<%= gobierto_budgets_api_global_data_total_budget_per_inhabitant_path(year: @year, format: :json) %>">
  </div>

  <div class="metric"
    data-indicator="gasto_total"
    data-widget-template="#widget-template"
    data-widget-type="total_budget"
    data-line-widget-series="means"
    data-line-widget-type="total_budget"
    data-widget-data-url="<%= gobierto_budgets_api_global_data_total_budget_path(year: @year, format: :json) %>">
  </div>

  <div class="metric"
    data-indicator="planned_vs_executed"
    data-widget-template="#widget-template-execution"
    data-widget-type="total_budget_execution"
    data-widget-data-url="<%= gobierto_budgets_api_global_data_total_budget_execution_path(year: @year, format: :json) %>">
  </div>

  <div class="metric"
    data-indicator="population"
    data-widget-template="#widget-template"
    data-widget-type="population"
    data-widget-data-url="<%= gobierto_budgets_api_global_data_population_path(year: @year, format: :json) %>">
  </div>

  <div class="metric"
    data-indicator="debt"
    data-widget-template="#widget-template-debt"
    data-widget-type="debt"
    data-widget-data-url="<%= gobierto_budgets_api_global_data_debt_path(year: @year, format: :json) %>">
  </div>
</div>


<%= render partial: 'shared/widget_template' %>

<%= render partial: 'shared/widget_template_execution' %>

<%= render partial: 'shared/widget_template_debt' %>
